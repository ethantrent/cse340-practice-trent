<%- include('../partials/header') %>
<main class="faculty-detail-container">
    <div class="faculty-profile">
        <img src="/images/faculty-images/<%= facultyMember.slug %>.jpg" alt="<%= facultyMember.name %>" class="faculty-photo-large">
        <div class="profile-header">
            <h1><%= facultyMember.name %></h1>
            <p class="profile-title"><%= facultyMember.title %></p>
            <p class="profile-department"><%= facultyMember.department %></p>
        </div>
        
        <div class="profile-details">
            <div class="detail-section">
                <h2>Contact Information</h2>
                <div class="detail-grid">
                    <div class="detail-item">
                        <strong>Office:</strong>
                        <span><%= facultyMember.office %></span>
                    </div>
                    <div class="detail-item">
                        <strong>Phone:</strong>
                        <span><a href="tel:<%= facultyMember.phone %>"><%= facultyMember.phone %></a></span>
                    </div>
                    <div class="detail-item">
                        <strong>Email:</strong>
                        <span><a href="mailto:<%= facultyMember.email %>"><%= facultyMember.email %></a></span>
                    </div>
                </div>
            </div>
            
            <div class="detail-section">
                <h2>Academic Information</h2>
                <div class="detail-grid">
                    <div class="detail-item">
                        <strong>Department:</strong>
                        <span><%= facultyMember.department %></span>
                    </div>
                    <div class="detail-item">
                        <strong>Position:</strong>
                        <span><%= facultyMember.title %></span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="profile-actions">
            <a href="/faculty" class="btn-secondary">&larr; Back to Faculty Directory</a>
            <a href="mailto:<%= facultyMember.email %>" class="btn-primary">Send Email</a>
        </div>
    </div>
</main>
<%- include('../partials/footer') %>
