<%- include('../partials/header') %>
<main class="faculty-detail-container">
    <div class="faculty-profile">
        <div class="profile-header">
            <h1><%= faculty.name %></h1>
            <p class="profile-title"><%= faculty.title %></p>
            <p class="profile-department"><%= faculty.department %></p>
        </div>
        
        <div class="profile-details">
            <div class="detail-section">
                <h2>Contact Information</h2>
                <div class="detail-grid">
                    <div class="detail-item">
                        <strong>Office:</strong>
                        <span><%= faculty.office %></span>
                    </div>
                    <div class="detail-item">
                        <strong>Phone:</strong>
                        <span><a href="tel:<%= faculty.phone %>"><%= faculty.phone %></a></span>
                    </div>
                    <div class="detail-item">
                        <strong>Email:</strong>
                        <span><a href="mailto:<%= faculty.email %>"><%= faculty.email %></a></span>
                    </div>
                </div>
            </div>
            
            <div class="detail-section">
                <h2>Academic Information</h2>
                <div class="detail-grid">
                    <div class="detail-item">
                        <strong>Department:</strong>
                        <span><%= faculty.department %></span>
                    </div>
                    <div class="detail-item">
                        <strong>Position:</strong>
                        <span><%= faculty.title %></span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="profile-actions">
            <a href="/faculty" class="btn-secondary">&larr; Back to Faculty Directory</a>
            <a href="mailto:<%= faculty.email %>" class="btn-primary">Send Email</a>
        </div>
    </div>
</main>
<%- include('../partials/footer') %>
